<h1>New Blood Test</h1>
<%= form_for @blood_test do |form| %>
  <%= form.label 'taken_on' %>
  <%= form.date_field :taken_on %>
  <%= form.label :hb, 'Hb' %>
  <%= form.number_field :hb %>
  <%= form.label :mcv, 'MCV' %>
  <%= form.number_field :mcv %>
  <%= form.label :wbc, 'WBC' %>
  <%= form.number_field :wbc %>
  <%= form.label :platelets, 'Platelets' %>
  <%= form.number_field :platelets %>
  <%= form.label :neutrophils, 'Neutrophils' %>
  <%= form.number_field :neutrophils %>
  <%= form.label :lymphocytes, 'Lymphocytes' %>
  <%= form.number_field :lymphocytes %>
  <%= form.label :alt, 'ALT' %>
  <%= form.number_field :alt %>
  <%= form.label :alk_phos, 'Alk Phos' %>
  <%= form.number_field :alk_phos %>
  <%= form.label :creatinine, 'Creatinine' %>
  <%= form.number_field :creatinine %>
  <%= form.label :esr, 'ESR' %>
  <%= form.number_field :esr %>
  <%= form.label :crp, 'CRP' %>
  <%= form.text_field :crp %>

  <%= form.submit 'submit' %>
<% end %>

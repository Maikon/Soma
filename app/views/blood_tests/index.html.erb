<h1>All Blood Tests</h1>
<table class="main-content">
  <thead>
    <tr>
      <% headers.each do |header| %>
        <th><%= header %></th>
      <% end %>
      <th></th>
    </tr>
    <tr>
      <th></th>
      <% methods.each do |method| %>
        <th><%= BloodTestsHelper::UNITS[method.to_sym] %></th>
      <% end %>
      <th></th>
    </tr>
  </thead>
  <tbody>
  <% @blood_tests.each do |blood_test| %>
    <tr>
      <td><%= link_to blood_test.taken_on.strftime("%d %b %Y"), blood_test_path(blood_test) %></td>
      <% methods.each do |method| %>
        <td <%= class_for(blood_test, method) %>>
          <%= value_for(blood_test, method) %>
        </td>
      <% end %>
      <td><%= link_to "Edit", edit_blood_test_path(blood_test.id) %></td>
    </tr>
  <% end %>
  </tbody>
</table>
